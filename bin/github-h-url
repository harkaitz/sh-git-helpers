##:
#h: Usage: $0 [USERNAME/]PROJECT
#h:
#h: Print the Github project's URL. If USERNAME is not specified
#h: then the environment variable GITHUB_USERNAME is used.
##:
github_h_url() (
    u="`dirname  "$1"`" p="`basename "$1"`"
    if test @"$u" = @'.'; then
        u="${GITHUB_USERNAME}"
    fi
    if test ! -n "$u"; then
        echo >&2 "error: Please set GITHUB_USERNAME"
        return 1
    fi
    echo "https://github.com/${u}/${p}"
)
SCRNAME="`basename "$0"`"
if test @"${SCRNAME}" = @"github-h-url";then
    case "${1}" in
        ''|-h|--help)
            sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|${SCRNAME}|g"
            echo ""
            sed -n 's/^ *#l: \{0,2\}//p' "$0"
            ;;
        *)
            github_h_url "$@"
            ;;
    esac
fi
