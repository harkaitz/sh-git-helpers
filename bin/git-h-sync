##:
#h: Usage: $0
#h:
#h: Interactively fetch changes from the repository.
##:
git_h_sync() (
    ask 'Download changes from repo? y/N' yn
    if test @"$yn" = @"y"; then
        vrun git fetch --all || true
    fi
    ask 'Reset working directory? y/N' yn
    if test @"$yn" = @"y"; then
        vrun git checkout -f . || true
    fi
    if test -e ".gitmodules"; then
        ask 'Reset all submodules? y/N' yn
        if test @"$yn" = @"y"; then
            vrun git submodule update --remote --init --recursive --force || true
        fi
    fi
)
ask() {
    echo -n "$1: "
    read "$2"
}
vrun() {
    echo "$*" >&2
    "$@"
}
SCRNAME="`basename "$0"`"
if test @"${SCRNAME}" = @"git-h-sync";then
    case "${1}" in
        -h|--help)
            sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|${SCRNAME}|g"
            echo ""
            sed -n 's/^ *#l: \{0,2\}//p' "$0"
            ;;
        *)
            git_h_sync "$@"
            ;;
    esac
fi
